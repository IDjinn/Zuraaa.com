extends ../layouts/layout

block content
    .container.main-container
        each bot in bots
            .box
                article.media
                    .media-left
                        figure.image.is-64x64
                            img.is-rounded(src=bot.avatar)
                    p
                        strong=bot.name
                        br
                        | #{bot.description}
                nav.level
                    .level-left
                        a.button.level-item(href=bot.baseUrl) PÃ¡gina 
                        a.button.level-item(href=`https://discord.com/oauth2/authorize?client_id=${bot.id}&scope=bot&guild_id=${bpdId}`) Adicionar
                        a.button.level-item(href=`/staff/bots/${bot.id}/aprovar`) Aprovar
                        a.button.level-item(href=`/staff/bots/${bot.id}/rejeitar`) Rejeitar