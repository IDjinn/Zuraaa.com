.bot-card
  .avatar-box(title=bot.name)
    //- a(href="#" onclick="showModal('" + bot.id + "')")
    //-   span Ver
    
    .avatar(style="background-image: url('" + bot.avatar + "')")
  .details
    p.heading(title="Tags") #{bot.tags[Math.floor(Math.random() * bot.tags.length)]} | #{bot.guilds || "???"} servidores | #{bot.votes} votos
    p.title.is-size-4(title=bot.name)
      img(title="Online" src="/img/icons/" + bot.status + ".png" oncontextmenu="return false;")
      | #{bot.name}
    p.subtitle.is-size-6(title="Descrição")=bot.description

    .links
      a.page(title="Página" href=bot.baseUrl)
        span
        p Página
      
      a.invite(title="Adicionar" href=bot.baseUrl + "add")
        span
        p Adicionar
      
      a.invite(title="Votar" href=bot.baseUrl + "votar")
        span
        p Votar